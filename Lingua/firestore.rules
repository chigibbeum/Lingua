rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow each authenticated user to read/write their own user profile doc
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow each authenticated user to manage their own sentences
    match /users/{userId}/sentences/{sentenceId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow the same user to manage notes under their sentences
    match /users/{userId}/sentences/{sentenceId}/notes/{noteId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Collection group-style rule for notes anywhere in the DB.
    // - Anyone can read public notes
    // - Only the owner can write/update/delete their notes
    match /{path=**}/notes/{noteId} {
      allow read: if resource.data.visibility == 'public' ||
                  (request.auth != null && request.auth.uid == resource.data.ownerUid);
      allow create: if request.auth != null &&
                    request.resource.data.ownerUid == request.auth.uid;
      allow update, delete: if request.auth != null &&
                            request.auth.uid == resource.data.ownerUid;
    }
  }
}


